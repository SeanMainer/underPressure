<?xml version="1.0" encoding="utf-8"?>

<!--this creates a background that makes the text entry easier to see/ notice by user-->

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="@android:color/white"/>  <!-- White Background -->
    <corners android:radius="8dp"/>  <!-- Rounded Corners -->
    <stroke android:width="2dp" android:color="@android:color/holo_blue_light"/>  <!-- Blue Border -->
    <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp"/>
</shape>
