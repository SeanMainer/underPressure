<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review Your Submission"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Job Details (Label) -->
        <TextView
            android:id="@+id/label_job_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Details:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@id/title_review"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Job Details (Value) -->
        <TextView
            android:id="@+id/textView_job_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/label_job_details"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Address (Label) -->
        <TextView
            android:id="@+id/label_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@id/textView_job_details"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Address (Value) -->
        <TextView
            android:id="@+id/textView_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/label_address"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- Photos (Label) -->
        <TextView
            android:id="@+id/label_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uploaded Photos:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@id/textView_address"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Photo Preview -->
        <ImageView
            android:id="@+id/image_preview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:background="@color/gray"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/label_photos"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Submitted By (Label) -->
        <TextView
            android:id="@+id/label_submitted_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submitted by:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@id/image_preview"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Submitted By (Value) -->
        <TextView
            android:id="@+id/textView_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/label_submitted_by"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Instructions -->
        <TextView
            android:id="@+id/text_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Need to edit? Simply click back on the tabs up top to change details, then come back here to submit your lead!"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/textView_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Submit My Lead Button -->
        <Button
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit My Lead"
            android:backgroundTint="@color/light_blue"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_instructions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>