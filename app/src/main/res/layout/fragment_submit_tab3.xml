<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"> <!-- Ensures all child views are centered horizontally -->

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_a_picture"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"/>

    <!-- Upload Photos Button -->
    <Button
        android:id="@+id/button_upload_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_photos"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/image_preview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/preview_of_captured_image" />

    <!-- Next Button (Correctly Positioned) -->
    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:backgroundTint="@color/light_blue"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"/>
</LinearLayout>
